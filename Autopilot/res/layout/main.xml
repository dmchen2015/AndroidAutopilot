<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/graphs_label" />

        <ToggleButton
            android:id="@+id/graphs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/north_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/east_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/course_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/altitude_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/roll_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/roll_rate_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/pitch_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/pitch_rate_graph"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/graph_height"
            android:orientation="vertical" />
        
    </LinearLayout>

</ScrollView>